<Window x:Class="bv425dzWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:bv425dzWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="300" Width="500">
    <Grid>
        <TextBlock Text="Калькулятор сложения" Margin="0 0 0 200" Width="400" Height="50" TextAlignment="Center" FontWeight="Bold" FontSize="32"/>
        <TextBox Name="firstValue" Width="150" Height="35" Margin="0 0 200 75" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="24"/>
        <TextBox Name="secondValue" Width="150" Height="35" Margin="200 0 0 75" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="24"/>
        <TextBlock Text="+" Margin="0 0 0 75" Width="50" Height="35" TextAlignment="Center" FontWeight="Bold" FontSize="24"/>
        <Button Name="result" Click="SumNumbers" Width="150" Height="35" Margin="0 50 0 0" Content="Сложить" HorizontalContentAlignment="Center" VerticalContentAlignment="Stretch" FontSize="20" FontWeight="Bold"/>
        <TextBlock Name="disPlay" Width="350" Height="35" Margin="0 175 0 0" Background="LightGray" TextAlignment="Center" FontSize="24"/>
    </Grid>
</Window>
