<Window
    x:Class="View.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:pageVM="clr-namespace:ViewModel.PagesViewModel;assembly=ViewModel"
    Title="MainWindow"
    Width="800"
    Height="450"
    d:DataContext="{d:DesignInstance Type=pageVM:MainViewModel}"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="100" />
        </Grid.RowDefinitions>

        <ContentControl Content="{Binding NovigateService.BasePageViewModel}" />
        <Button
            Grid.Row="1"
            Width="200"
            Height="50"
            Margin="25,0,0,0"
            HorizontalAlignment="Left"
            Command="{Binding NovigateToAboutCommand}"
            Content="To About"
            FontSize="32"
            FontWeight="Light" />

        <Button
            Grid.Row="1"
            Width="200"
            Height="50"
            Margin="0,0,25,0"
            HorizontalAlignment="Right"
            Command="{Binding NovigateToHomeCommand}"
            Content="To Home"
            FontSize="32"
            FontWeight="Light" />
    </Grid>
</Window>
