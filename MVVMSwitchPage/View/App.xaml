<Application
    x:Class="View.App"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:View"
    xmlns:pages="clr-namespace:View.Pages"
    xmlns:pagesViewModel="clr-namespace:ViewModel.PagesViewModel;assembly=ViewModel">
    <Application.Resources>
        <DataTemplate DataType="{x:Type pagesViewModel:AboutPageViewModel}">
            <pages:AboutPage />
        </DataTemplate>
        <DataTemplate DataType="{x:Type pagesViewModel:HomePageViewModel}">
            <pages:HomePage />
        </DataTemplate>
    </Application.Resources>
</Application>