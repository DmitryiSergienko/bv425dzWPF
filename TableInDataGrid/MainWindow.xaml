<Window
    x:Class="bv425dzWPF.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:bv425dzWPF"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="1000"
    Height="800"
    mc:Ignorable="d">
    <Grid Background="#80000000">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="18*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="18*" />
            <RowDefinition Height="1*" />
        </Grid.RowDefinitions>

        <Border
            Grid.Row="1"
            Grid.Column="1"
            Padding="19"
            Background="#FFFFFF"
            BorderBrush="#000000"
            BorderThickness="1">
            <Grid
                Grid.Row="1"
                Grid.Column="1"
                Background="#FFFFFF">
                <StackPanel>
                    <DataGrid
                        Name="tableData"
                        Margin="0,0,0,20"
                        AutoGenerateColumns="False"
                        BorderBrush="Black"
                        ColumnWidth="Auto"
                        FontSize="32"
                        HeadersVisibility="Column"
                        IsReadOnly="True"
                        SelectionChanged="tableData_SelectionChanged">

                        <DataGrid.Columns>
                            <DataGridTextColumn Binding="{Binding Summary}" Header="Название" />
                            <DataGridTextColumn
                                Width="*"
                                Binding="{Binding Description}"
                                Header="Описание" />
                            <DataGridTextColumn Binding="{Binding Price}" Header="Цена" />
                            <DataGridTextColumn Binding="{Binding Quantity}" Header="Количество" />
                        </DataGrid.Columns>
                    </DataGrid>

                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <Button
                            Name="addButton"
                            Grid.Column="0"
                            Margin="10,0"
                            Click="addButton_Click"
                            Content="Добавить"
                            FontSize="32" />
                        <Button
                            Name="editButton"
                            Grid.Column="1"
                            Margin="10,0"
                            Click="editButton_Click"
                            Content="Редактировать"
                            FontSize="32"
                            IsEnabled="False" />
                        <Button
                            Name="delButton"
                            Grid.Column="2"
                            Margin="10,0"
                            Click="delButton_Click"
                            Content="Удалить"
                            FontSize="32"
                            IsEnabled="False" />
                    </Grid>

                    <StackPanel Name="formProduct" Visibility="Collapsed">
                        <Grid Margin="0,20">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*" />
                                <ColumnDefinition Width="2*" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>

                            <Border
                                Grid.Row="0"
                                Grid.Column="0"
                                BorderBrush="Black"
                                BorderThickness="1">
                                <TextBlock
                                    Padding="30,0,0,0"
                                    Background="#30000000"
                                    FontSize="32"
                                    Text="Название" />
                            </Border>
                            <Border
                                Grid.Row="0"
                                Grid.Column="1"
                                BorderBrush="Black"
                                BorderThickness="0,1,1,1">
                                <TextBox
                                    Name="summaryInput"
                                    Padding="30,0,0,0"
                                    FontSize="32"
                                    TextChanged="allInputInFormProduct_TextChanged" />
                            </Border>
                            <Border
                                Grid.Row="1"
                                Grid.Column="0"
                                BorderBrush="Black"
                                BorderThickness="1,0,1,1">
                                <TextBlock
                                    Padding="30,0,0,0"
                                    Background="#30000000"
                                    FontSize="32"
                                    Text="Описание" />
                            </Border>
                            <Border
                                Grid.Row="1"
                                Grid.Column="1"
                                BorderBrush="Black"
                                BorderThickness="0,0,1,1">
                                <TextBox
                                    Name="descriptionInput"
                                    Padding="30,0,0,0"
                                    FontSize="32"
                                    TextChanged="allInputInFormProduct_TextChanged" />
                            </Border>
                            <Border
                                Grid.Row="2"
                                Grid.Column="0"
                                BorderBrush="Black"
                                BorderThickness="1,0,1,1">
                                <TextBlock
                                    Padding="30,0,0,0"
                                    Background="#30000000"
                                    FontSize="32"
                                    Text="Цена" />
                            </Border>
                            <Border
                                Grid.Row="2"
                                Grid.Column="1"
                                BorderBrush="Black"
                                BorderThickness="0,0,1,1">
                                <TextBox
                                    Name="priceInput"
                                    Padding="30,0,0,0"
                                    FontSize="32"
                                    TextChanged="allInputInFormProduct_TextChanged" />
                            </Border>
                            <Border
                                Grid.Row="3"
                                Grid.Column="0"
                                BorderBrush="Black"
                                BorderThickness="1,0,1,1">
                                <TextBlock
                                    Padding="30,0,0,0"
                                    Background="#30000000"
                                    FontSize="32"
                                    Text="Количество" />
                            </Border>
                            <Border
                                Grid.Row="3"
                                Grid.Column="1"
                                BorderBrush="Black"
                                BorderThickness="0,0,1,1">
                                <TextBox
                                    Name="quantityInput"
                                    Padding="30,0,0,0"
                                    FontSize="32"
                                    TextChanged="allInputInFormProduct_TextChanged" />
                            </Border>
                        </Grid>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Button
                                Name="sendButton"
                                Grid.Column="0"
                                Margin="50,0"
                                Click="sendButton_Click"
                                Content="Отправить"
                                FontSize="32"
                                IsEnabled="False" />
                            <Button
                                Name="sendChangeButton"
                                Grid.Column="0"
                                Margin="50,0"
                                Click="sendChangeButton_Click"
                                Content="Изменить"
                                FontSize="32"
                                IsEnabled="False"
                                Visibility="Collapsed" />
                            <Button
                                Name="cancelButton"
                                Grid.Column="1"
                                Margin="50,0"
                                Click="cancelButton_Click"
                                Content="Отменить"
                                FontSize="32" />
                        </Grid>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>