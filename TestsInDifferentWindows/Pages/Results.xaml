<Page
    x:Class="TestsInDifferentWindows.Pages.Results"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:TestsInDifferentWindows.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Results"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <StackPanel
        Width="700"
        Height="350"
        Background="White">
        <TextBlock
            Width="700"
            Height="50"
            Margin="0,80,0,0"
            VerticalAlignment="Center"
            FontSize="32"
            Text="Результаты"
            TextAlignment="Center" />
        <Grid
            Name="tableResults"
            Width="350"
            Height="120"
            Margin="0,30,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Grid
                Grid.Row="0"
                Grid.Column="0"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">
                <TextBlock FontSize="24" Text="Вопрос 1:" />
            </Grid>
            <Grid
                Grid.Row="1"
                Grid.Column="0"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">
                <TextBlock FontSize="24" Text="Вопрос 2:" />
            </Grid>
            <Grid
                Grid.Row="2"
                Grid.Column="0"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">
                <TextBlock FontSize="24" Text="Вопрос 3:" />
            </Grid>
            <Grid
                Grid.Row="0"
                Grid.Column="1"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">
                <TextBlock Name="answer0" FontSize="24" />
            </Grid>
            <Grid
                Grid.Row="1"
                Grid.Column="1"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">
                <TextBlock Name="answer1" FontSize="24" />
            </Grid>
            <Grid
                Grid.Row="2"
                Grid.Column="1"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">
                <TextBlock Name="answer2" FontSize="24" />
            </Grid>
            <Grid />
        </Grid>

    </StackPanel>
</Page>