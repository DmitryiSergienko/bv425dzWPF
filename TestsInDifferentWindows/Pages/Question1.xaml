<Page
    x:Class="TestsInDifferentWindows.Pages.Question1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:TestsInDifferentWindows.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="Question1"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <StackPanel
        Width="700"
        Height="350"
        Background="White">
        <TextBlock
            Width="700"
            Height="50"
            Margin="0,20,0,0"
            VerticalAlignment="Center"
            FontSize="32"
            Text="Вопрос первый"
            TextAlignment="Center" />
        <TextBlock
            Width="700"
            Height="50"
            VerticalAlignment="Center"
            FontSize="24"
            Text="Сколько пальцев на руке?"
            TextAlignment="Center" />
        <Viewbox
            Width="300"
            Height="100"
            Margin="0,0,0,30"
            HorizontalAlignment="Center"
            Stretch="Uniform">
            <StackPanel Name="answers">
                <RadioButton Content="4" FontWeight="Bold" />
                <RadioButton Content="5" FontWeight="Bold" />
                <RadioButton Content="6" FontWeight="Bold" />
                <RadioButton Content="7" FontWeight="Bold" />
            </StackPanel>
        </Viewbox>

        <Button
            Name="nextTest"
            Width="150"
            Height="40"
            Background="#80000000"
            Click="nextTest_Click"
            Content="Дальше"
            FontSize="24" />
    </StackPanel>
</Page>
